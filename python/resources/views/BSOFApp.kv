#:kivy 1.10.1
#:import label kivy.uix.label
#:import sla kivy.adapters.simplelistadapter

MyForm:        # top GUI component class
<MyForm>:      # define MyForm class
  # BoxLayout:
  orientation: "vertical"
  padding:[25,25,25,25]
  spacing:10
  BoxLayout:
    size_hint: (1,.85)
    spacing:10
    # left normal frame
    BoxLayout:
      orientation: "vertical"
      Label:
        size_hint: (1,.1)
        text: "image"
        id: image
      Widget:
        size_hint: (1,.9)
        id: now_image
    # right abnormal frame
    BoxLayout:
      orientation: "vertical"
      Label:
        size_hint: (1,.1)
        text: "binary"
      Widget:
        size_hint: (1,.9)
        id: abnormal_image
  BoxLayout:
    size_hint: (1,.15)
    ListView:
      size_hint: (.7,1)
      adapter:
        sla.SimpleListAdapter(
        data=["params","add some datas"],
        cls=label.Label)
    Button:
      size_hint: (.3,1) 
      id: pause
      on_press: app.pause()
      text: "Pause"
