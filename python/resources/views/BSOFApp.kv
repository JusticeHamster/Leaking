#:kivy 1.10.1

MyForm:        # top GUI component class
<MyForm>:      # define MyForm class
  BoxLayout:
    orientation: "vertical"

    GridLayout:
      size_hint: (1,.7)
      cols: 2
      Label:
        size_hint_y: None
        height: 100
        text: "now image"
      Label:
        size_hint_y: None
        height: 100
        text: "abnormal image"
      Widget:
        id: now_image
      Widget:
        id: abnormal_image

    BoxLayout:
      size_hint: (1,.3)
      Label:
        size_hint: (.7,1)
        id: model_params
        text: "show all params in this Label"
      Button:
        size_hint: (.3,1) 
        id: button1
        text: "please press me!"
