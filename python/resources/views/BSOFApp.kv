#:kivy 1.10.1

MyForm:        # top GUI component class
<MyForm>:      # define MyForm class
  # BoxLayout:
  orientation: "vertical"

  BoxLayout:
    size_hint: (1,.85)
    #左侧正常帧
    BoxLayout:
      orientation: "vertical"
      Label:
        size_hint: (1,.1)
        text: "now image"
      Widget:
        size_hint: (1,.9)
        id: now_image
    #右侧异常帧
    BoxLayout:
      orientation: "vertical"
      Label:
        size_hint: (1,.1)
        text: "now image"
      Widget:
        size_hint: (1,.9)
        id: abnormal_image
  BoxLayout:
    size_hint: (1,.15)
    Label:
      size_hint: (.7,1)
      id: model_params
      text: "show all params in this Label"
    Button:
      size_hint: (.3,1) 
      id: button1
      text: "please press me!"
